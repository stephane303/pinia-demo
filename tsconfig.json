{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue","components.d.ts"],
    "exclude": [
        "src/**/__tests__/*",
        "src/pages/**/*",
    ],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "verbatimModuleSyntax": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
